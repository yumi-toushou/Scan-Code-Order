page {
  background-color: #f5f5f5;
}

.content-wrapper {
  margin-top: 340rpx;
  position: relative;
  padding: 0;
  min-height: calc(100vh - 340rpx);
  background: #fff;
}

.order-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.login-content {
  height: 500rpx;
  background: #fff;
  text-align: center;
}

.btn {
  width: 60%;
  font-size: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 20rpx;
}
.user-center-card__header__avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
  margin: 35rpx 0;
}